<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCharitieImg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_launcher_background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvChariteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Chavadi Child Welfare Society"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:typeface="serif"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvAshramName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvChariteName"
                android:layout_margin="5dp"
                android:text="Poor student ashram"
                android:typeface="serif"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAshramName"
                android:layout_margin="5dp"
                android:text="Ph: 040-65301431"
                android:typeface="serif"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Hyderabad"
                android:typeface="serif"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>